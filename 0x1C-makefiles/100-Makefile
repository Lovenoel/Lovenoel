CC = gcc
SRC = $(wildcard *.c)
OBJ = $(SRC:.c=.o)
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic
RM = /bin/rm -f

all: $(NAME)

$(NAME): $(OBJ)
    $(CC) $(OBJ) -o $@

%.o: %.c
    $(CC) $(CFLAGS) -c $< -o $@

clean:
    $(RM) $(OBJ) $(NAME) *~

oclean:
    $(RM) $(OBJ)

fclean: clean oclean
    $(RM) $(NAME)

re: fclean all

.PHONY: all clean oclean fclean re
